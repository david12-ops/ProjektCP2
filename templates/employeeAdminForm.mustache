<h2>{{title}}</h2>
<form method = "post">
    <div class="form-group">
        <label for="name">Jmeno</label>
        <input type="text" class="form-control" id="name" name="name" value="{{employee.name}}" required>
        {{#errors.name}}<div class="error">{{errors.name}}</div>{{/errors.name}}
    </div>
     <div class="form-group">
        <label for="surname">Příjmení</label>
        <input type="text" class="form-control" id="surname" name="surname" value="{{employee.surname}}" required>
        {{#errors.surname}}<div class="error">{{errors.surname}}</div>{{/errors.surname}}
    </div> 
    <div class="form-group">
        <label for="login">Uživatelské jméno</label>
        <input type="text" class="form-control" id="login" name="login" value="{{employee.login}}" required>
        {{#errors.login}}<div class="error">{{errors.login}}</div>{{/errors.login}}
    </div> 
    <div class="form-group">
        <label for="password">Heslo</label>
        <input type="password" class="form-control" id="password" name="password">
        {{#errors.password}}<div class="error">{{errors.password}}</div>{{/errors.password}}
    </div>
     <div class="form-group">
        <label for="confirmPassword">Potvrďte heslo</label>
        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
        {{#errors.confirmPassword}}<div class="error">{{errors.confirmPassword}}</div>{{/errors.confirmPassword}}
    </div>
    <div class="form-group">
    <label>Je admin</label>
    <div>
    {{#employee.admin}}
      <input type="checkbox" value="1" name="admin" id="admin" checked>
      <label for="admin">Ano</label>
    {{/employee.admin}}
    {{^employee.admin}} <input type="checkbox" value="1" name="admin" id="admin"><label for="admin">Ano</label>{{/employee.admin}}
    {{#errors.admin}}<div class="error">{{errors.admin}}</div>{{/errors.admin}}
    </div>
    </div>
    <div class="form-group">
        <label for="job">Pozice</label>
        <input type="text" class="form-control" id="job" name="job" value="{{employee.job}}" required>
        {{#errors.job}}<div class="error">{{errors.job}}</div>{{/errors.job}}
    </div>
    <div class="form-group">
        <label for="wage">Plat</label>
        <input type="text" class="form-control" id="wage" name="wage" value="{{employee.wage}}" required>
        {{#errors.wage}}<div class="error">{{errors.wage}}</div>{{/errors.wage}}
   </div>
    <div class ="form-group">
    <label>Vyber místnost</label>
    <div>
     {{#activeRoom}}
     <input type="radio" value="{{rID}}" name="room" id="{{rID}}" required checked>
     <label for="{rID}}">{{rName}} ({{rNo}})</label>
    {{/activeRoom}}
    {{#room}}
    <input type="radio" value="{{rID}}" name="room" id="{{rID}}" required>
    <label for="{rID}}">{{rName}} ({{rNo}})</label>
    {{/room}}
    {{#errors.room}}<div class="error">{{errors.room}}</div>{{/errors.room}}
    </div>
    </div>
   <div class ="form-group">
    <div>
    <fieldset>
    <label>Vyber klíče</label>
    <div>
    {{#activeKeys}}
    <input type="checkbox" id="{{rID}}" name="keys[]" value ="{{rID}}" checked>
    <label for="{{rID}}">{{name}} ({{no}})</label>
    {{/activeKeys}}
    {{#keys}}
    <input type="checkbox" id="{{rID}}" name="keys[]" value ="{{rID}}">
    <label for="{{rID}}">{{name}} ({{no}})</label>
    {{/keys}}
    </div>
    {{#errors.keys}}<div class="error">{{errors.keys}}</div>{{/errors.keys}}
    </fieldset>
    </div>
    </div>

    {{#employee.employee_id}}<input type="hidden" id = "employee_id" name="employee_id" value="{{employee.employee_id}}">{{/employee.employee_id}}

    <button type="submit" class="btn btn-primary mt-3">Odeslat</button>
</form>